{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --inspect --ignore-watch node_modules ./src/index.ts",
    "run-migrations": "knex migrate:latest",
    "start": "NODE_ENV=production npm run run-migrations && node dist/src/index.js",
    "build": "tsc && npm run start",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "date-fns": "^2.17.0",
    "date-fns-tz": "^1.1.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "knex": "^0.21.18",
    "pg": "^8.5.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.10",
    "@types/date-fns": "^2.6.0",
    "@types/express": "^4.17.11",
    "@types/knex": "^0.16.1",
    "@types/pg": "^7.14.10",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "prettier": "^2.2.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.2"
  }
}
